
@{
    ViewBag.Title = "Contact";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/StyleSheet1.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>Zenc</title>
</head>

<body>
    <div class="all">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#" style="color: white; border-bottom: 6px solid #3E6B7C;">Zenc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active links" aria-current="page" href="http://localhost:59406/Home/Index" style="color: white; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active links" aria-current="page" href="http://localhost:59406/Home/About" style="color: white; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active links" aria-current="page" href="http://localhost:59406/Home/Contact" style="color: white; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
        <div style="width:50%;margin:0 auto;">
            <h3 style="color:white; margin:50px;">Get In Touch</h3>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div>
                    <table class="table" style="width:500px; color:#000;">
                        <tbody>
                            <tr style="border:none;">
                                <td style="color:white">
                                    @Html.Label("User Name ")
                                </td>
                                <td style="color:white">
                                    @Html.TextBox("txtUserName", "", new { @class = "form-control" })
                                </td>
                            </tr>
                            <tr style="border:none;">
                                <td style="color:white">
                                    @Html.Label("Email", "Email")
                                </td>
                                <td style="color:white">
                                    @Html.Password("Email", "", new { @class = "form-control" })
                                </td>
                            </tr>
                            <tr style="border:none;">
                                <td style="color:white">
                                    Gender
                                </td>
                                <td style="color:white">
                                    Male:   @Html.RadioButton("Gender", "Male")
                                    Female: @Html.RadioButton("Gender", "Female")

                                </td>
                            </tr>

                            <tr style="border:none;">

                                <td style="font-weight:bold; color:white;">
                                    Address
                                </td>
                                <td>
                                    @Html.TextArea("Address", " ", new { @class = "form-control", id = "IdAddress" })
                                </td>
                            </tr>
                            <tr style="border:none; ">
                                <td></td>
                                <td >
                                    <input style="font-size:18px;background-color:#079992;color:#fff;" type="submit" class="btn btn-block" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="contact">
            <p class="para1">Contact us</p>
            <div class="wrapper">
                <div class="button">
                    <div class="icon">
                        <i class="fab fa-facebook-f"></i>
                    </div>
                    <span>Facebook</span>
                </div>
                <div class="button">
                    <div class="icon">
                        <i class="fab fa-twitter"></i>
                    </div>
                    <span>Twitter</span>
                </div>
                <div class="button">
                    <div class="icon">
                        <i class="fab fa-instagram"></i>
                    </div>
                    <span>Instagram</span>
                </div>
                <div class="button">
                    <div class="icon">
                        <i class="fab fa-github"></i>
                    </div>
                    <span>Github</span>
                </div>
                <div class="button">
                    <div class="icon">
                        <i class="fab fa-youtube"></i>
                    </div>
                    <span>YouTube</span>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

</body>

</html>






